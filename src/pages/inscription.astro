---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Authentification - GAM EASY">
    <Header />
    <main class="auth-container">
        <div class="auth-card">
            <h1 id="auth-title">Créer un <span>compte</span></h1>
            
            <form id="auth-form">
                <div class="input-group">
                    <label>Email</label>
                    <input type="email" id="email" required placeholder="votre@email.com" />
                </div>
                <div class="input-group">
                    <label>Mot de passe</label>
                    <input type="password" id="password" required placeholder="••••••••" />
                </div>
                <button type="submit" id="submit-btn" class="btn-auth">S'inscrire</button>
            </form>

            <div class="toggle-container">
                <p id="toggle-text">Déjà un compte ? <button id="toggle-btn">Se connecter</button></p>
                <button id="forgot-password-btn" class="forgot-link">Mot de passe oublié ?</button>
            </div>

            <p id="message"></p>
        </div>
    </main>
</Layout>

<script>
    import { auth, db } from '../lib/firebase';
    import { 
        createUserWithEmailAndPassword, 
        signInWithEmailAndPassword, 
        sendEmailVerification, 
        sendPasswordResetEmail 
    } from "firebase/auth";
    import { doc, setDoc } from "firebase/firestore";

    const form = document.getElementById('auth-form');
    const authTitle = document.getElementById('auth-title');
    const submitBtn = document.getElementById('submit-btn');
    const toggleBtn = document.getElementById('toggle-btn');
    const toggleText = document.getElementById('toggle-text');
    const forgotBtn = document.getElementById('forgot-password-btn');
    const message = document.getElementById('message');

    let isLoginMode = false;

    // Basculer entre Inscription et Connexion
    toggleBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        isLoginMode = !isLoginMode;
        message.innerText = "";

        if (isLoginMode) {
            authTitle!.innerHTML = "Se <span>connecter</span>";
            submitBtn!.innerText = "Connexion";
            toggleText!.innerHTML = "Pas encore de compte ? <button id='toggle-btn'>S'inscrire</button>";
            forgotBtn!.style.display = "inline-block"; // Affiche le lien reset en mode login
        } else {
            authTitle!.innerHTML = "Créer un <span>compte</span>";
            submitBtn!.innerText = "S'inscrire";
            toggleText!.innerHTML = "Déjà un compte ? <button id='toggle-btn'>Se connecter</button>";
            forgotBtn!.style.display = "none";
        }
        document.getElementById('toggle-btn')?.addEventListener('click', () => toggleBtn.click());
    });

    // --- LOGIQUE RÉINITIALISATION MOT DE PASSE ---
    forgotBtn?.addEventListener('click', async () => {
        const email = (document.getElementById('email') as HTMLInputElement).value;
        if (!email) {
            if (message) {
                message.innerText = "Veuillez entrer votre email d'abord.";
                message.style.color = "#ffeb3b";
            }
            return;
        }

        try {
            await sendPasswordResetEmail(auth, email);
            if (message) {
                message.innerText = "Lien de réinitialisation envoyé par mail !";
                message.style.color = "#4caf50";
            }
        } catch (error: any) {
            if (message) {
                message.innerText = "Erreur : " + error.message;
                message.style.color = "#f44336";
            }
        }
    });

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const emailInput = document.getElementById('email') as HTMLInputElement;
            const passwordInput = document.getElementById('password') as HTMLInputElement;
            const email = emailInput.value;
            const password = passwordInput.value;

            try {
                if (isLoginMode) {
                    // CONNEXION
                    const userCredential = await signInWithEmailAndPassword(auth, email, password);
                    
                    // Vérifier si l'email est confirmé
                    if (!userCredential.user.emailVerified) {
                        if (message) {
                            message.innerText = "Veuillez confirmer votre email avant de vous connecter.";
                            message.style.color = "#ffeb3b";
                        }
                        return;
                    }

                    if (message) message.innerText = "Connexion réussie !";
                    setTimeout(() => window.location.href = "/", 1500);
                } else {
                    // INSCRIPTION
                    const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                    const user = userCredential.user;

                    // --- ENVOI DU MAIL DE CONFIRMATION ---
                    await sendEmailVerification(user);

                    await setDoc(doc(db, "users", user.uid), {
                        email: user.email,
                        plan: "basique",
                        createdAt: new Date()
                    });

                    if (message) {
                        message.innerText = "Compte créé ! Vérifiez vos mails pour confirmer votre inscription.";
                        message.style.color = "#4caf50";
                    }
                }

            } catch (error: any) {
                if (message) {
                    message.style.color = "#f44336";
                    if (error.code === 'auth/email-already-in-use') message.innerText = "Cet email est déjà utilisé.";
                    else if (error.code === 'auth/wrong-password') message.innerText = "Mot de passe incorrect.";
                    else message.innerText = "Erreur : " + error.message;
                }
            }
        });
    }
</script>

<style>
    .auth-container {
        height: 100vh; display: flex; align-items: center; justify-content: center;
        background: #060612; color: white; font-family: 'Inter', sans-serif;
    }
    .auth-card {
        background: rgba(255, 255, 255, 0.03); padding: 40px; border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.08); width: 100%; max-width: 400px; text-align: center;
    }
    h1 span { color: #8a4fff; }
    .input-group { text-align: left; margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; color: #a0a0a0; }
    input {
        width: 100%; padding: 12px; border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05); color: white; outline: none;
    }
    input:focus { border-color: #8a4fff; }
    .btn-auth {
        width: 100%; padding: 12px; background: #8a4fff; border: none;
        color: white; font-weight: bold; border-radius: 8px; cursor: pointer; transition: 0.3s;
    }
    .btn-auth:hover { background: #7036e0; transform: translateY(-2px); }
    
    .toggle-container { margin-top: 20px; font-size: 14px; color: #a0a0a0; display: flex; flex-direction: column; gap: 10px; }
    #toggle-btn {
        background: none; border: none; color: #8a4fff; font-weight: bold;
        cursor: pointer; text-decoration: underline; padding: 0 5px;
    }
    .forgot-link {
        background: none; border: none; color: #666; font-size: 12px;
        cursor: pointer; text-decoration: none; display: none; transition: 0.3s;
    }
    .forgot-link:hover { color: #8a4fff; }
    #message { margin-top: 15px; font-size: 14px; min-height: 20px; font-weight: 500; }
</style>