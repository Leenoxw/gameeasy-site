---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Inscription - GAM EASY">
    <Header />
    <main class="auth-container">
        <div class="auth-card">
            <h1>Créer un <span>compte</span></h1>
            <form id="register-form">
                <div class="input-group">
                    <label>Email</label>
                    <input type="email" id="email" required placeholder="votre@email.com" />
                </div>
                <div class="input-group">
                    <label>Mot de passe</label>
                    <input type="password" id="password" required placeholder="••••••••" />
                </div>
                <button type="submit" class="btn-auth">S'inscrire</button>
            </form>
            <p id="message"></p>
        </div>
    </main>
</Layout>

<script>
    import { auth, db } from '../lib/firebase';
    import { createUserWithEmailAndPassword } from "firebase/auth";
    import { doc, setDoc } from "firebase/firestore";

    const form = document.getElementById('register-form');
    const message = document.getElementById('message');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;

        try {
            // 1. Création du compte dans Auth
            const userCredential = await createUserWithEmailAndPassword(auth, email, password);
            const user = userCredential.user;

            // 2. Création du document dans Firestore (L'ÉTAPE 5 !)
            await setDoc(doc(db, "users", user.uid), {
                email: user.email,
                plan: "basique", // Statut par défaut
                createdAt: new Date()
            });

            message.style.color = "#4caf50";
            message.innerText = "Compte créé avec succès ! Redirection...";
            setTimeout(() => window.location.href = "/", 2000);

        } catch (error) {
            message.style.color = "#f44336";
            message.innerText = "Erreur : " + error.message;
        }
    });
</script>

<style>
    .auth-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #060612;
        color: white;
        font-family: 'Inter', sans-serif;
    }
    .auth-card {
        background: rgba(255, 255, 255, 0.03);
        padding: 40px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }
    h1 span { color: #8a4fff; }
    .input-group { text-align: left; margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; color: #a0a0a0; }
    input {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        color: white;
    }
    .btn-auth {
        width: 100%;
        padding: 12px;
        background: #8a4fff;
        border: none;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }
    .btn-auth:hover { background: #7036e0; transform: translateY(-2px); }
    #message { margin-top: 15px; font-size: 14px; }
</style>