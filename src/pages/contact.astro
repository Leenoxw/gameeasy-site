  .method-card:hover {
    background: rgba(138, 79, 255, 0.1);
    border-color: #8a4fff;
    transform: translateY(-5px);
  }

  .method-card i { font-size: 2.5rem; color: #8a4fff; }
  .method-card strong { display: block; font-size: 1.2rem; margin-bottom: 5px; }
  .method-card p { font-size: 0.9rem; color: #a1a1aa; margin: 0; }

  /* FAQ */
