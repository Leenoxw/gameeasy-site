---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export function getStaticPaths() {
  return [
    { params: { id: 'gta-v' }, props: { title: 'GTA V', category: 'Action', image: '/gameeasy-site/images/gta5.jpg', desc: 'Braquages et monde ouvert à Los Santos.' }},
    { params: { id: 'cyberpunk-2077' }, props: { title: 'Cyberpunk 2077', category: 'RPG', image: '/gameeasy-site/images/cyberpunk.jpg', desc: 'Le futur dystopique de Night City.' }},
    { params: { id: 'elden-ring' }, props: { title: 'Elden Ring', category: 'RPG', image: '/gameeasy-site/images/elden-ring.jpg', desc: 'Devenez le Seigneur d\'Elden.' }},
    { params: { id: 'rdr2' }, props: { title: 'Red Dead Redemption 2', category: 'Aventure', image: '/gameeasy-site/images/rdr2.jpg', desc: 'L\'épopée sauvage d\'Arthur Morgan.' }},
    { params: { id: 'spiderman2' }, props: { title: 'Spider-Man 2', category: 'Action', image: '/gameeasy-site/images/spiderman2.jpg', desc: 'Incarnez Peter et Miles contre Venom.' }},
    { params: { id: 'hogwarts' }, props: { title: 'Hogwarts Legacy', category: 'Magie', image: '/gameeasy-site/images/hogwarts.jpg', desc: 'Votre lettre pour Poudlard est arrivée.' }}
  ];
}

const { title, category, image, desc } = Astro.props;
---
<Layout title={title}>
  <Header />
  <main class="detail-page">
    <div class="container">
      <a href="/gameeasy-site/cracks" class="back">← Retour aux cracks</a>
      <div class="content">
        <img src={image} alt={title} />
        <div class="text">
          <span class="badge">{category}</span>
          <h1>{title}</h1>
          <p>{desc}</p>
          <button class="download-btn">TÉLÉCHARGER (DIRECT)</button>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .detail-page { padding: 140px 20px; background: #060612; min-height: 100vh; color: white; }
  .container { max-width: 1000px; margin: 0 auto; }
  .back { color: #8a4fff; text-decoration: none; margin-bottom: 20px; display: inline-block; }
  .content { display: grid; grid-template-columns: 1fr 1fr; gap: 40px; }
  img { width: 100%; border-radius: 12px; border: 1px solid #8a4fff; }
  .badge { background: #8a4fff; padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; }
  h1 { font-size: 3rem; margin: 10px 0; }
  p { color: #a1a1aa; line-height: 1.6; }
  .download-btn { background: #8a4fff; color: white; border: none; padding: 15px 30px; border-radius: 8px; font-weight: bold; cursor: pointer; margin-top: 20px; }
</style>