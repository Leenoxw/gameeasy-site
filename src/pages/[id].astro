---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export function getStaticPaths() {
  return [
    { params: { id: 'gta-v' }, props: { title: "GTA V", category: "Action / Open World", image: "/gameeasy-site/images/gta5.jpg", desc: "Plongez dans l'univers criminel de Los Santos avec Michael, Franklin et Trevor." }},
    { params: { id: 'cyberpunk-2077' }, props: { title: "Cyberpunk 2077", category: "RPG / Sci-Fi", image: "/gameeasy-site/images/cyberpunk.jpg", desc: "Devenez une légende dans la mégalopole futuriste de Night City." }},
    { params: { id: 'elden-ring' }, props: { title: "Elden Ring", category: "Action / RPG", image: "/gameeasy-site/images/elden-ring.jpg", desc: "Explorez un monde fantastique sombre créé par Hidetaka Miyazaki et George R.R. Martin." }},
    { params: { id: 'red-dead-redemption-2' }, props: { title: "Red Dead Redemption 2", category: "Aventure / Western", image: "/gameeasy-site/images/rdr2.jpg", desc: "Vivez la fin de l'ère de l'Ouest sauvage avec Arthur Morgan." }},
    { params: { id: 'spiderman-2' }, props: { title: "Marvel's Spider-Man 2", category: "Action / Aventure", image: "/gameeasy-site/images/spiderman2.jpg", desc: "Incarnez Peter et Miles contre la menace de Venom." }},
    { params: { id: 'hogwarts-legacy' }, props: { title: "Hogwarts Legacy", category: "Aventure / Magie", image: "/gameeasy-site/images/hogwarts.jpg", desc: "Le RPG ultime dans l'univers de Harry Potter." }},
    { params: { id: 'forza-horizon-5' }, props: { title: "Forza Horizon 5", category: "Course / Simulation", image: "/gameeasy-site/images/forza5.jpg", desc: "Le festival Horizon vous attend au Mexique." }},
    { params: { id: 'god-of-war-ragnarok' }, props: { title: "God of War Ragnarök", category: "Action / Mythologie", image: "/gameeasy-site/images/gow-ragnarok.jpg", desc: "Kratos et Atreus face au destin des Neuf Royaumes." }},
    { params: { id: 'the-witcher-3' }, props: { title: "The Witcher 3: Wild Hunt", category: "RPG / Fantasy", image: "/gameeasy-site/images/witcher3.jpg", desc: "Traquez la progéniture du destin dans un monde dévasté." }},
    { params: { id: 'hades-2' }, props: { title: "Hades II", category: "Roguelike / Action", image: "/gameeasy-site/images/hades2.jpg", desc: "Affrontez le Titan du temps dans les Enfers grecs." }},
    { params: { id: 'hollow-knight-silksong' }, props: { title: "Hollow Knight: Silksong", category: "Metroidvania", image: "/gameeasy-site/images/silksong.jpg", desc: "L'aventure tant attendue de Hornet dans Pharloom." }},
    { params: { id: 'manor-lords' }, props: { title: "Manor Lords", category: "Stratégie / Médiéval", image: "/gameeasy-site/images/manor-lords.jpg", desc: "Gestion de cité et batailles tactiques réalistes." }},
    { params: { id: 'palworld' }, props: { title: "Palworld", category: "Survie / Créatures", image: "/gameeasy-site/images/palworld.jpg", desc: "Capturez des monstres et survivez dans un monde ouvert." }},
    { params: { id: 'lethal-company' }, props: { title: "Lethal Company", category: "Horreur / Coop", image: "/gameeasy-site/images/lethal-company.jpg", desc: "Travaillez pour la Compagnie dans des lunes abandonnées." }},
    { params: { id: 'black-myth-wukong' }, props: { title: "Black Myth: Wukong", category: "Action / RPG", image: "/gameeasy-site/images/wukong.jpg", desc: "Un voyage épique inspiré de la mythologie chinoise." }},
    { params: { id: 'stardew-valley' }, props: { title: "Stardew Valley", category: "Simulation / RPG", image: "/gameeasy-site/images/stardew.jpg", desc: "Retapez la ferme de votre grand-père." }},
    { params: { id: 'schedules' }, props: { title: "Schedules", category: "Indie / Horreur", image: "/gameeasy-site/images/schedules.jpg", desc: "Survivez à l'horreur des horaires." }},
    { params: { id: 'are-we-there-yet' }, props: { title: "Are We There Yet?", category: "Indie / Aventure", image: "/gameeasy-site/images/rv-there-yet.jpg", desc: "Un roadtrip mystérieux." }},
    { params: { id: 'buckshot-roulette' }, props: { title: "Buckshot Roulette", category: "Indie / Stratégie", image: "/gameeasy-site/images/buckshot.jpg", desc: "Une partie de roulette russe sous tension." }},
    { params: { id: 'chained-together' }, props: { title: "Chained Together", category: "Coop / Plateforme", image: "/gameeasy-site/images/chained-together.jpg", desc: "Grimpez ensemble ou tombez ensemble." }},
    { params: { id: 'phasmophobia' }, props: { title: "Phasmophobia", category: "Horreur / Coop", image: "/gameeasy-site/images/phasmophobia.jpg", desc: "Identifiez les entités paranormales avec vos amis." }}
  ];
}

const { title, category, image, desc } = Astro.props;
---

<Layout title={`${title} - GameEasy`}>
  <Header />
  <main class="detail-page">
    <div class="container">
      <a href="/gameeasy-site/cracks" class="back-btn">← Retour au catalogue</a>
      
      <div class="hero">
        <div class="image-box">
          <img src={image} alt={title} />
        </div>
        <div class="info-box">
          <span class="category-tag">{category}</span>
          <h1>{title}</h1>
          <p class="desc">{desc}</p>
          
          <div class="download-section">
            <button class="dl-button">TÉLÉCHARGER MAINTENANT</button>
            <span class="file-info">Taille : Variable • Format : .zip / .exe</span>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .detail-page { padding: 140px 20px 60px; background: #060612; min-height: 100vh; color: white; }
  .container { max-width: 1100px; margin: 0 auto; }
  
  .back-btn { color: #8b5cf6; text-decoration: none; font-weight: bold; display: inline-block; margin-bottom: 30px; }
  .back-btn:hover { text-decoration: underline; }
  
  .hero { 
    display: grid; 
    grid-template-columns: 1fr 1fr; 
    gap: 50px; 
    background: #11111e; 
    padding: 40px; 
    border-radius: 20px; 
    border: 1px solid #1e1e2e;
  }
  
  .image-box img { width: 100%; border-radius: 12px; border: 1px solid rgba(139, 92, 246, 0.3); }
  
  .category-tag { color: #8b5cf6; font-weight: bold; font-size: 0.9rem; }
  h1 { font-size: 3rem; margin: 10px 0 20px; }
  .desc { color: #a1a1aa; line-height: 1.7; font-size: 1.1rem; margin-bottom: 30px; }
  
  .download-section { 
    background: rgba(255,255,255,0.03); 
    padding: 25px; 
    border-radius: 12px; 
    text-align: center;
  }
  
  .dl-button { 
    width: 100%; 
    background: #8b5cf6; 
    color: white; 
    border: none; 
    padding: 18px; 
    border-radius: 8px; 
    font-weight: bold; 
    cursor: pointer; 
    font-size: 1rem;
    transition: 0.3s;
  }
  .dl-button:hover { background: #7c3aed; transform: scale(1.02); }
  
  .file-info { display: block; margin-top: 10px; font-size: 0.8rem; color: #555; }

  @media (max-width: 850px) {
    .hero { grid-template-columns: 1fr; }
    h1 { font-size: 2.2rem; }
  }
</style>