---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export function getStaticPaths() {
  return [
    { params: { id: 'gta-v' }, props: { title: 'GTA V', description: 'Description de GTA V...', image: '/gameeasy-site/images/gtav.jpg' }},
    { params: { id: 'cyberpunk-2077' }, props: { title: 'Cyberpunk 2077', description: 'Description de Cyberpunk...', image: '/gameeasy-site/images/cyberpunk.jpg' }},
    { params: { id: 'elden-ring' }, props: { title: 'Elden Ring', description: 'Description de Elden Ring...', image: '/gameeasy-site/images/elden-ring.jpg' }}
  ];
}
const { title, description, image } = Astro.props;
---
<Layout title={title}>
    <Header />
    <main style="padding: 150px 20px; color: white; background: #060612; min-height: 100vh; text-align: center;">
        <img src={image} style="width: 100%; max-width: 600px; border-radius: 15px; border: 1px solid #8b5cf6;" />
        <h1 style="font-size: 3rem; margin-top: 20px;">{title}</h1>
        <p style="color: #a1a1aa; max-width: 600px; margin: 20px auto;">{description}</p>
        <a href="/gameeasy-site/cracks" style="color: #8b5cf6;">‚Üê Retour</a>
    </main>
    <Footer />
</Layout>