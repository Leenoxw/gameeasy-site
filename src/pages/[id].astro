                    <span class="tag">{cat}</span>
                </div>
                <h1 class="game-title">{title}</h1>
                <p class="meta-info">{dev} • {date}</p>

                <div class="action-bar">
                    <a href="#" class="btn-download"><i class="fas fa-download"></i> download</a>
                    <a href="#" class="btn-trailer"><i class="far fa-play-circle"></i> Trailer</a>
                    
                    <div class="mini-actions">
                        <button class="action-icon"><i class="far fa-thumbs-up"></i><span>12</span></button>
                        <button class="action-icon"><i class="far fa-star"></i></button>
                        <button class="action-icon"><i class="fas fa-exclamation-triangle"></i></button>
                    </div>
                </div>
            </div>

            <div class="staff-note">
                <div class="note-header">
                    <i class="far fa-comment-dots"></i>
                    <span>staffNote</span>
                </div>
                <p>Le crack a été mis à jour en version <strong>{version}</strong>. Testé et fonctionnel à 100%.</p>
            </div>
        </div>
    </section>

    <section class="main-content">
        <div class="container grid-layout">
            
            <div class="left-column">
                <h2 class="section-label">description</h2>
                <div class="description-box">
                    <p>{desc}</p>
                    <img src={image} alt="Screenshot" class="desc-preview-img" />
                </div>

                <h2 class="section-label" style="margin-top: 50px;">systemConfig</h2>
                <div class="config-grid">
                    <div class="config-box minimal">
                        <h3><span class="dot">●</span> Minimale</h3>
                        <ul>
