<style>
  /* Base & Hero */
  main { background: #060612; color: white; overflow-x: hidden; }
  
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    padding: 0 10%;
    position: relative;
    background: radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.15) 0%, transparent 50%);
  }

  .main-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -2px;
    margin-bottom: 20px;
  }

  .gradient-text {
    background: linear-gradient(90deg, #8b5cf6, #d8b4fe);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 10px 30px rgba(139, 92, 246, 0.3);
  }

  .subtitle {
    font-size: 1.2rem;
    color: #a1a1aa;
    margin-bottom: 40px;
    max-width: 500px;
  }

  /* Buttons */
  .hero-btns { display: flex; gap: 20px; }
  
  .btn-primary {
    background: #8b5cf6;
    padding: 18px 35px;
    border-radius: 12px;
    font-weight: bold;
    text-decoration: none;
    color: white;
    transition: 0.3s;
    box-shadow: 0 10px 25px rgba(139, 92, 246, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    padding: 18px 35px;
    border-radius: 12px;
    font-weight: bold;
    text-decoration: none;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: 0.3s;
  }

  .btn-primary:hover { transform: translateY(-5px); box-shadow: 0 15px 30px rgba(139, 92, 246, 0.6); }
  .btn-secondary:hover { background: rgba(255, 255, 255, 0.1); }

  /* Trending Section */
  .trending { padding: 100px 0; }
  .container { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
  
  .section-header { 
    display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; 
  }
  
  .view-all { color: #8b5cf6; text-decoration: none; font-weight: 600; }

  .game-grid { 
    display: grid; 
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); 
    gap: 25px; 
  }

  .game-card {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    aspect-ratio: 16/9;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: 0.4s;
  }

  .game-card img { width: 100%; height: 100%; object-fit: cover; transition: 0.5s; }
  
  .card-overlay {
    position: absolute; inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
    display: flex; flex-direction: column; justify-content: flex-end;
    padding: 20px; opacity: 0; transition: 0.3s;
  }

  .game-card:hover { transform: scale(1.03); border-color: #8b5cf6; }
  .game-card:hover img { transform: scale(1.1); }
  .game-card:hover .card-overlay { opacity: 1; }

  /* Features */
  .features { padding: 60px 0; background: rgba(255, 255, 255, 0.02); }
  .features .container { display: flex; justify-content: space-around; gap: 40px; flex-wrap: wrap; }
  .feature-item { text-align: center; max-width: 250px; }
  .feature-item .icon { font-size: 2.5rem; display: block; margin-bottom: 15px; }

  /* Glow Effects */
  .glow-sphere {
    position: absolute; top: 20%; right: -10%;
    width: 600px; height: 600px;
    background: rgba(139, 92, 246, 0.1);
    filter: blur(150px);
    border-radius: 50%;
    z-index: -1;
  }

  @media (max-width: 768px) {
    .hero { padding: 0 5%; text-align: center; justify-content: center; }
    .hero-btns { flex-direction: column; align-items: center; }
    .main-title { font-size: 3.5rem; }
  }
</style>