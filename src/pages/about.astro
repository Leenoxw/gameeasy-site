  .icon { font-size: 2.5rem; margin-bottom: 15px; display: block; }
  .value-card h3 { margin-bottom: 15px; }
  .value-card p { color: #a1a1aa; font-size: 0.95rem; line-height: 1.5; }

  /* CTA */
  .about-cta { text-align: center; background: linear-gradient(rgba(139, 92, 246, 0.1), transparent); padding: 60px; border-radius: 30px; }
  .cta-btns { display: flex; gap: 20px; justify-content: center; margin-top: 30px; }
  
  .btn-primary { background: #8b5cf6; padding: 15px 30px; border-radius: 10px; text-decoration: none; color: white; font-weight: bold; transition: 0.3s; }
  .btn-discord { background: #5865F2; padding: 15px 30px; border-radius: 10px; text-decoration: none; color: white; font-weight: bold; transition: 0.3s; }
  .btn-primary:hover, .btn-discord:hover { opacity: 0.9; transform: scale(1.05); }

