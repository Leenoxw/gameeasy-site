<style>
  .tuto-page { padding: 140px 20px 80px; background: #060612; min-height: 100vh; color: white; }
  .container { max-width: 800px; margin: 0 auto; }

  .tuto-header { text-align: center; margin-bottom: 80px; }
  .tuto-header h1 { font-size: 3rem; font-weight: 800; margin-bottom: 10px; }
  .tuto-header h1 span { color: #8b5cf6; }
  .tuto-header p { color: #a1a1aa; }

  /* Le Sch√©ma (Roadmap) */
  .roadmap { position: relative; display: flex; flex-direction: column; gap: 40px; padding-left: 60px; }

  .roadmap-line { 
    position: absolute; left: 24px; top: 0; bottom: 0; width: 2px; 
    background: linear-gradient(to bottom, #8b5cf6, #1e1e2e); 
  }

  .roadmap-step { 
    position: relative; 
    opacity: 0; 
    transform: translateX(-20px); 
    animation: slideIn 0.5s forwards var(--delay); 
  }

  @keyframes slideIn {
    to { opacity: 1; transform: translateX(0); }
  }

  .bubble { 
    position: absolute; left: -56px; width: 40px; height: 40px; 
    background: #11111e; border: 2px solid #333; border-radius: 50%; 
    display: flex; align-items: center; justify-content: center; 
    font-weight: bold; font-size: 0.9rem; z-index: 2;
  }

  /* Effet sp√©cial pour l'√©tape cruciale (Extraction) */
