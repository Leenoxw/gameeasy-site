    border-color: #8b5cf6; 
    box-shadow: 0 0 15px rgba(139, 92, 246, 0.6); 
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(139, 92, 246, 0); }
    100% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0); }
  }

  .final-check { background: #10b981; border-color: #10b981; color: white; }

  .content { 
    background: rgba(255, 255, 255, 0.03); 
    padding: 20px 25px; 
    border-radius: 12px; 
    border: 1px solid #1e1e2e; 
  }

  .focus-border { border-color: rgba(139, 92, 246, 0.4); }

  h3 { color: #8b5cf6; margin-bottom: 8px; font-size: 1.3rem; }
  p { color: #ccc; line-height: 1.6; font-size: 0.95rem; }

  /* Surlignage Logiciels */
  .software-highlight { 
    background: rgba(139, 92, 246, 0.2); 
    color: #fff; 
    font-weight: bold; 
    padding: 2px 6px; 
    border-radius: 4px; 
    border-bottom: 2px solid #8b5cf6;
    text-shadow: 0 0 8px rgba(139, 92, 246, 0.8);
  }

  /* Section Logiciels du bas */
  .software-section { margin-top: 80px; text-align: center; }
  .software-section h2 { margin-bottom: 30px; }
  .software-section h2 span { color: #8b5cf6; }

  .software-grid { display: flex; gap: 15px; justify-content: center; flex-wrap: wrap; }

  .soft-btn { 
    padding: 12px 25px; 
    background: transparent; 
    border: 1px solid #8b5cf6; 
    color: white; 
    text-decoration: none; 
    border-radius: 8px; 
    font-weight: 600; 
    transition: 0.3s;
  }

  .soft-btn:hover { 
    background: #8b5cf6; 
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.5); 
    transform: translateY(-3px);
  }

  @media (max-width: 600px) {
    .roadmap { padding-left: 45px; }
    .bubble { left: -45px; width: 32px; height: 32px; font-size: 0.75rem; }
    .roadmap-line { left: 19px; }
  }
</style>