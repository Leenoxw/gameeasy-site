<style>
  .donation-page {
    min-height: 100vh;
    background: #060612;
    padding: 150px 20px 80px;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
  }

  .donation-bg-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: #f97316;
    filter: blur(150px);
    opacity: 0.1;
    z-index: 0;
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 800px;
    width: 100%;
  }

  .donation-card {
    background: #0c0c1d;
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 30px;
    padding: 50px;
    text-align: center;
    box-shadow: 0 25px 50px rgba(0,0,0,0.5);
  }

  .icon-circle {
    font-size: 3rem;
    background: rgba(249, 115, 22, 0.1);
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin: 0 auto 20px;
    border: 1px solid rgba(249, 115, 22, 0.3);
  }

  h1 { font-size: 2.5rem; font-weight: 900; color: white; margin-bottom: 15px; }
  p { color: #888; line-height: 1.6; margin-bottom: 30px; }

  /* --- BARRE DE PROGRESSION --- */
  .goal-section {
    background: rgba(255,255,255,0.03);
    padding: 20px;
    border-radius: 20px;
    margin-bottom: 40px;
  }
  .goal-info { display: flex; justify-content: space-between; color: white; font-weight: 800; margin-bottom: 10px; }
  .progress-bar { height: 12px; background: #1a1a2e; border-radius: 10px; overflow: hidden; }
  .progress-fill { height: 100%; background: linear-gradient(to right, #f97316, #ff8c00); box-shadow: 0 0 15px rgba(249, 115, 22, 0.5); }
  .goal-sub { font-size: 0.85rem; margin-top: 10px; margin-bottom: 0; color: #666; }

  /* --- CRYPTO LIST --- */
  .crypto-grid { display: flex; flex-direction: column; gap: 15px; margin-bottom: 30px; }
  .crypto-item {
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.05);
    padding: 15px 25px;
    border-radius: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    transition: 0.3s;
  }
  .crypto-item:hover { background: rgba(255,255,255,0.05); border-color: #f97316; }
  .crypto-info { display: flex; align-items: center; gap: 20px; }
  .crypto-info i { font-size: 1.5rem; color: #f97316; }
  .crypto-info strong { display: block; color: white; font-size: 1rem; }
  .crypto-info code { color: #555; font-size: 0.8rem; }

  .copy-btn {
    background: #1a1a2e;
    color: #f97316;
    border: 1px solid #f97316;
    padding: 8px 15px;
    border-radius: 8px;
    font-size: 0.7rem;
    font-weight: 800;
    cursor: pointer;
    transition: 0.3s;
  }
  .copy-btn:hover { background: #f97316; color: white; }

  .lightning-notice {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    color: #00ff88;
    font-size: 0.85rem;
    margin-bottom: 30px;
  }

  .back-link { color: #555; text-decoration: none; font-size: 0.9rem; font-weight: 700; transition: 0.3s; }
  .back-link:hover { color: white; }

  @media (max-width: 600px) {
    .donation-card { padding: 30px 20px; }
    .crypto-item { flex-direction: column; gap: 15px; text-align: center; }
    .crypto-info { flex-direction: column; gap: 10px; }
  }
</style>