---
import Layout from '../layouts/Layout.astro';
import Catalogue from '../components/Catalogue.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Tous les Cracks - JeuxCracks">
    <Header />

    <div class="main-container">
        <aside class="pub-side left">
            <div class="pub-placeholder">PUB GAUCHE</div>
        </aside>

        <main class="page-padding">
            <Catalogue />
        </main>

        <aside class="pub-side right">
            <div class="pub-placeholder">PUB DROITE</div>
        </aside>
    </div>

</Layout>

<style>
    .main-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        max-width: 100%;
        margin: 0 auto;
        padding-top: 100px; /* Remplace le padding de l'ancienne div */
    }

    .page-padding {
        flex: 1;
        max-width: 1200px;
        padding: 0 20px;
    }

    .pub-side {
        width: 160px; /* Largeur fixe pour les pubs */
        min-width: 160px;
        display: flex;
        justify-content: center;
        position: sticky;
        top: 120px;
    }

    .pub-placeholder {
        width: 160px;
        height: 600px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px dashed rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.2);
        font-weight: bold;
        font-size: 12px;
        text-transform: uppercase;
    }

    /* Cache les pubs sur petit écran pour ne pas écraser le catalogue */
    @media (max-width: 1400px) {
        .pub-side {
            display: none;
        }
    }
</style>