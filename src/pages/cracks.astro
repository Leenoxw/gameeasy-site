---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const games = [
  { id: 'gta-v', title: "GTA V", category: "Action", image: "/gameeasy-site/images/gta5.jpg" },
  { id: 'cyberpunk-2077', title: "Cyberpunk 2077", category: "RPG", image: "/gameeasy-site/images/cyberpunk.jpg" },
  { id: 'elden-ring', title: "Elden Ring", category: "RPG", image: "/gameeasy-site/images/elden-ring.jpg" },
  { id: 'red-dead-redemption-2', title: "Red Dead Redemption 2", category: "Action", image: "/gameeasy-site/images/rdr2.jpg" },
  { id: 'spiderman-2', title: "Marvel's Spider-Man 2", category: "Action", image: "/gameeasy-site/images/spiderman2.jpg" },
  { id: 'hogwarts-legacy', title: "Hogwarts Legacy", category: "Aventure", image: "/gameeasy-site/images/hogwarts.jpg" },
  { id: 'forza-horizon-5', title: "Forza Horizon 5", category: "Course", image: "/gameeasy-site/images/forza5.jpg" },
  { id: 'god-of-war-ragnarok', title: "God of War Ragnarök", category: "Action", image: "/gameeasy-site/images/gow-ragnarok.jpg" }
];

const categories = ["Tous", "Action", "RPG", "Aventure", "Course"];
---

<Layout title="Catalogue des Cracks - GameEasy">
  <Header />
  <main class="page-padding">
    <div class="container">
      <h1 class="title">EXPLOREZ NOTRE <span class="purple">COLLECTION</span></h1>
      
      <div class="controls-bar">
        <div class="filter-group">
            {categories.map((cat) => (
                <button class="filter-btn" data-category={cat.toLowerCase()}>{cat}</button>
            ))}
        </div>

        <div class="sort-group">
            <span>Trier par:</span>
            <select id="sortSelect" class="sort-dropdown">
                <option value="default">Populaires</option>
                <option value="az">Nom (A-Z)</option>
                <option value="za">Nom (Z-A)</option>
            </select>
        </div>
      </div>

      <p id="no-results" style="display: none; text-align: center; color: #888; margin-top: 50px;">Aucun jeu ne correspond à votre recherche...</p>

      <div class="grid" id="gameGrid">
        {games.map((game) => (
          <div class="card game-card" data-title={game.title} data-category={game.category.toLowerCase()}>
            <img src={game.image} alt={game.title} class="cover" />
            <div class="info">
              <span class="badge">{game.category}</span>
              <h3>{game.title}</h3>
              <a href={`/gameeasy-site/${game.id}`} class="btn">VOIR LE JEU</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  function initCatalogue() {
    const searchInput = document.getElementById('mainSearch') as HTMLInputElement;
    const filterBtns = document.querySelectorAll('.filter-btn');
    const sortSelect = document.getElementById('sortSelect') as HTMLSelectElement;
    const gameGrid = document.getElementById('gameGrid');
    const cards = Array.from(document.querySelectorAll('.game-card'));
    const noResults = document.getElementById('no-results');

    let activeCategory = 'tous';

    const filterAndSort = () => {
      const query = searchInput?.value.toLowerCase() || "";
      let foundCount = 0;

      // 1. Filtrage
      cards.forEach((card) => {
        const title = (card as HTMLElement).dataset.title?.toLowerCase() || "";
        const cat = (card as HTMLElement).dataset.category || "";
        
        const matchesSearch = title.includes(query);
        const matchesCat = activeCategory === 'tous' || cat === activeCategory;

        if (matchesSearch && matchesCat) {
          (card as HTMLElement).style.display = "block";
          foundCount++;
        } else {
          (card as HTMLElement).style.display = "none";
        }
      });

      // 2. Tri
      const sortVal = sortSelect.value;
      if (sortVal !== 'default' && gameGrid) {
          const sorted = [...cards].sort((a, b) => {
              const valA = (a as HTMLElement).dataset.title || "";
              const valB = (b as HTMLElement).dataset.title || "";
              return sortVal === 'az' ? valA.localeCompare(valB) : valB.localeCompare(valA);
          });
          sorted.forEach(c => gameGrid.appendChild(c));
      }

      if (noResults) noResults.style.display = foundCount === 0 ? "block" : "none";
    };

    // Events
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        activeCategory = (btn as HTMLElement).dataset.category || 'tous';
        filterAndSort();
      });
    });

    searchInput?.addEventListener('input', filterAndSort);
    sortSelect?.addEventListener('change', filterAndSort);

    // Init
    document.querySelector('.filter-btn[data-category="tous"]')?.classList.add('active');
  }

  initCatalogue();
  document.addEventListener('astro:after-swap', initCatalogue);
</script>

<style>
  .page-padding { padding: 140px 20px 100px; background: #060612; min-height: 100vh; color: white; }
  .container { max-width: 1200px; margin: 0 auto; }
  .title { text-align: center; font-size: 2.8rem; font-weight: 900; margin-bottom: 40px; }
  .purple { color: #8a4fff; }

  /* Controls (Filtres + Tri) */
  .controls-bar { display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; gap: 20px; flex-wrap: wrap; }
  .filter-group { display: flex; gap: 10px; flex-wrap: wrap; }
  .filter-btn { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: #ccc; padding: 8px 18px; border-radius: 20px; cursor: pointer; transition: 0.3s; font-weight: 600; }
  .filter-btn.active { background: #8a4fff; color: white; border-color: #8a4fff; }
  .sort-group { display: flex; align-items: center; gap: 10px; color: #888; }
  .sort-dropdown { background: #11111e; color: white; border: 1px solid rgba(255,255,255,0.1); padding: 8px; border-radius: 8px; outline: none; cursor: pointer; }

  .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 25px; }
  .card { background: #11111e; border-radius: 12px; overflow: hidden; border: 1px solid #1e1e2e; transition: 0.3s; }
  .card:hover { transform: translateY(-5px); border-color: #8a4fff; }
  .cover { width: 100%; height: 180px; object-fit: cover; }
  .info { padding: 20px; }
  .badge { color: #8a4fff; font-size: 0.8rem; font-weight: bold; text-transform: uppercase; }
  h3 { margin: 10px 0; font-size: 1.2rem; }
  .btn { display: block; background: white; color: black; text-align: center; padding: 10px; border-radius: 8px; text-decoration: none; font-weight: bold; transition: 0.3s; }
  .btn:hover { background: #8a4fff; color: white; }
</style>