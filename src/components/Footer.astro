<style>
    .footer {
        background: #04040c;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding: 60px 5% 20px 5%;
        margin-top: 50px;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 2fr 2fr 1fr;
        gap: 40px;
        margin-bottom: 40px;
    }

    .logo { font-size: 22px; font-weight: 800; color: white; margin-bottom: 15px; }
    .logo span { color: #8a4fff; }
    
    .footer-brand p { color: #888; font-size: 14px; max-width: 300px; }

    .footer-links { display: flex; gap: 60px; }
    
    .link-group h4, .footer-social h4 {
        color: white;
        font-size: 16px;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .link-group a {
        display: block;
        color: #888;
        text-decoration: none;
        margin-bottom: 10px;
        font-size: 14px;
        transition: 0.3s;
    }

    .link-group a:hover { color: #8a4fff; }

    .social-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

    .discord {
        background: rgba(88, 101, 242, 0.1);
        color: #5865F2;
        border: 1px solid rgba(88, 101, 242, 0.2);
    }

    .discord:hover {
        background: #5865F2;
        color: white;
    }

    .footer-bottom {
        text-align: center;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding-top: 20px;
        color: #444;
        font-size: 12px;
    }

    @media (max-width: 768px) {
        .footer-content { grid-template-columns: 1fr; text-align: center; }
        .footer-links { justify-content: center; }
        .footer-brand p { margin: 0 auto 20px auto; }
    }
</style>