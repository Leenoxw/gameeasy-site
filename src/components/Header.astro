<header class="header-container">
    <nav class="navbar">
        <a href="/gameeasy-site/" class="logo">GAM<span>EASY</span></a>
        
        <div class="burger-menu" id="burgerBtn">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <ul class="nav-links" id="navLinks">
            <li><a href="/gameeasy-site/">Accueil</a></li>
            <li><a href="/gameeasy-site/cracks" class="highlight"><i class="fas fa-rocket"></i> Cracks</a></li>
            <li><a href="/gameeasy-site/tuto" class="btn-tuto"><i class="fas fa-book"></i> Tuto</a></li>
            <li><a href="https://discord.gg/YaP3akhcgQ"><i class="fab fa-discord"></i> Discord</a></li>
            <li><a href="/gameeasy-site/about">About</a></li>
        </ul>
    </nav>
</header>

<script>
    const burgerBtn = document.getElementById('burgerBtn');
    const navLinks = document.getElementById('navLinks');

    if (burgerBtn && navLinks) {
        burgerBtn.addEventListener('click', () => {
            navLinks.classList.toggle('mobile-open');
            burgerBtn.classList.toggle('active');
            
            // Empêche de scroller la page quand le menu est ouvert
            if(navLinks.classList.contains('mobile-open')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = 'auto';
            }
        });
    }
</script>

<style>
    /* 1. RESET ET BASE */
    .header-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 10000;
        background: #060612; /* Couleur solide pour éviter les bugs de transparence au début */
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding: 10px 0;
    }

    .navbar {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
    }

    .logo {
        font-size: 22px;
        font-weight: 900;
        color: white;
        text-decoration: none;
        z-index: 10001;
    }
    .logo span { color: #8a4fff; }

    /* 2. MENU PC (Par défaut) */
    .nav-links {
        display: flex;
        list-style: none;
        gap: 10px;
        margin: 0;
        padding: 0;
    }

    .nav-links a {
        color: white;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        padding: 8px 15px;
        border-radius: 6px;
        background: rgba(255,255,255,0.05);
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

    .highlight { background: #8a4fff !important; }
    .btn-tuto { border: 1px solid #8a4fff; color: #8a4fff !important; }

    /* 3. BURGER (Caché sur PC) */
    .burger-menu {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
        z-index: 10001;
    }

    .burger-menu span {
        width: 25px;
        height: 2px;
        background: white;
        transition: 0.3s;
    }

    /* 4. MODE MOBILE (Indispensable) */
    @media (max-width: 900px) {
        .burger-menu {
            display: flex; /* On affiche enfin le burger */
        }

        .nav-links {
            display: none; /* ON CACHE LE MENU NORMAL SUR MOBILE */
            flex-direction: column;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: #060612;
            padding: 100px 20px;
            gap: 20px;
            text-align: center;
        }

        /* Quand on clique sur le burger, cette classe s'active en JS */
        .nav-links.mobile-open {
            display: flex; 
        }

        .nav-links a {
            width: 100%;
            max-width: 300px;
            margin: 0 auto;
            font-size: 18px;
            padding: 15px;
            justify-content: center;
        }

        /* Animation du X */
        .burger-menu.active span:nth-child(1) { transform: translateY(7px) rotate(45deg); }
        .burger-menu.active span:nth-child(2) { opacity: 0; }
        .burger-menu.active span:nth-child(3) { transform: translateY(-7px) rotate(-45deg); }
    }
</style>