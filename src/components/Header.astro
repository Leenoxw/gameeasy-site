<style>
    .header-container {
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        z-index: 9999 !important; /* Force le Header au-dessus du fond noir de l'accueil */
        background: rgba(6, 6, 18, 0.4) !important; /* Transparence forcée */
        backdrop-filter: blur(12px) !important;
        -webkit-backdrop-filter: blur(12px) !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;
        padding: 10px 0 !important;
    }
    
    .navbar { display: flex; align-items: center; justify-content: space-between; padding: 0 5%; max-width: 1400px; margin: 0 auto; }
    .logo { font-size: 24px; font-weight: 800; color: white; text-decoration: none; }
    .logo span { color: #8a4fff; }
    .nav-links { display: flex; list-style: none; gap: 15px; margin: 0; padding: 0; align-items: center; }
    .nav-links a { text-decoration: none; color: #efefef; font-size: 14px; font-weight: 600; padding: 12px 20px; border-radius: 8px; background: rgba(255, 255, 255, 0.03); border: 1px solid rgba(255, 255, 255, 0.08); transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); display: flex; align-items: center; gap: 8px; }
    .nav-links a.highlight { background: rgba(138, 79, 255, 0.8) !important; border: 1px solid #8a4fff !important; color: white !important; }
    .nav-links a.btn-tuto { background: rgba(255, 255, 255, 0.05) !important; border: 1px solid #8a4fff !important; color: #8a4fff !important; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px; position: relative; overflow: hidden; }
    .nav-links a.btn-tuto:hover { background: #8a4fff !important; color: #efefef !important; box-shadow: 0 0 20px rgba(138, 79, 255, 0.8); transform: translateY(-4px); }
    .nav-links a.btn-tuto::after { content: ''; position: absolute; top: -50%; left: -50%; width: 200%; height: 200%; background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent); transform: rotate(45deg); animation: shine 3s infinite; }
    @keyframes shine { 0% { left: -100%; } 20% { left: 100%; } 100% { left: 100%; } }
    .nav-links a.highlight:hover { transform: scale(1.16); background: #8a4fff !important; box-shadow: 0 0 20px rgba(138, 79, 255, 0.4); }
    .search-container { display: flex; align-items: center; background: rgba(255, 255, 255, 0.05); border-radius: 20px; border: 1px solid rgba(255, 255, 255, 0.1); padding: 4px 15px; transition: width 0.4s ease, border-color 0.4s ease; width: 180px; }
    .search-container:hover, .search-container:focus-within { width: 250px; border-color: rgba(138, 79, 255, 0.5); background: rgba(138, 79, 255, 0.08); }
    .search-icon { color: rgba(255, 255, 255, 0.4); margin-right: 8px; transition: color 0.3s ease; }
    .search-container:hover .search-icon { color: #8a4fff; }
    .search-container input { background: transparent; border: none; color: white; padding: 8px 0; outline: none; width: 100%; font-size: 13px; }
</style>
<script>
  // Fonction de recherche
  const setupSearch = () => {
    const searchInput = document.getElementById('mainSearch');
    
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const searchValue = e.target.value.toLowerCase();
        // On cible toutes les cartes de jeux présentes sur la page catalogue
        const gameCards = document.querySelectorAll('.game-card');

        gameCards.forEach(card => {
          const title = card.querySelector('h3').textContent.toLowerCase();
          
          // Filtre : Si le titre contient la lettre/mot, on garde, sinon on cache
          if (title.includes(searchValue)) {
            card.style.display = "block"; // Montre le jeu
          } else {
            card.style.display = "none";  // Cache le jeu
          }
        });
      });
    }
  };

  // S'exécute au chargement de la page
  setupSearch();

  // Si tu utilises les transitions d'Astro, ajoute ceci :
  document.addEventListener('astro:after-swap', setupSearch);
</script>