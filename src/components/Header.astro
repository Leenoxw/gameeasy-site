<header class="header-container">
    <nav class="navbar">
        <a href="/gameeasy-site/" class="logo">GAM<span>EASY</span></a>
        
        <button class="burger-menu" id="burgerBtn" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <ul class="nav-links" id="navLinks">
            <li><a href="/gameeasy-site/">Accueil</a></li>
            <li><a href="/gameeasy-site/cracks" class="highlight"><i class="fas fa-rocket"></i> Cracks</a></li>
            <li><a href="/gameeasy-site/tuto" class="btn-tuto"><i class="fas fa-book"></i> Tuto</a></li>
            <li><a href="https://discord.gg/YaP3akhcgQ"><i class="fab fa-discord"></i> Discord</a></li>
            <li><a href="/gameeasy-site/about">About</a></li>
        </ul>
    </nav>
</header>

<script>
    const burgerBtn = document.getElementById('burgerBtn');
    const navLinks = document.getElementById('navLinks');

    burgerBtn.addEventListener('click', () => {
        // Alterne la classe 'active' pour afficher le menu et animer le bouton
        burgerBtn.classList.toggle('active');
        navLinks.classList.toggle('active');
    });

    // Fermer le menu si on clique sur un lien (utile pour les ancres)
    const links = document.querySelectorAll('.nav-links a');
    links.forEach(link => {
        link.addEventListener('click', () => {
            burgerBtn.classList.remove('active');
            navLinks.classList.remove('active');
        });
    });
</script>

<style>
    .header-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 9999;
        background: rgba(6, 6, 18, 0.9);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 10px 0;
    }
    
    .navbar { 
        display: flex; 
        align-items: center; 
        justify-content: space-between; 
        padding: 0 5%; 
        max-width: 1400px; 
        margin: 0 auto; 
    }

    .logo { 
       font-size: 24px; 
       font-weight: 800; 
       color: white; 
       text-decoration: none;
    }
    
    .logo span { color: #8a4fff; }

    /* --- NAVIGATION DESKTOP --- */
    .nav-links { 
        display: flex; 
        list-style: none; 
        gap: 15px; 
        margin: 0; 
        padding: 0; 
        align-items: center; 
    }

    .nav-links a { 
        text-decoration: none; 
        color: #efefef; 
        font-size: 14px; 
        font-weight: 600; 
        padding: 10px 15px; 
        border-radius: 8px; 
        background: rgba(255, 255, 255, 0.03); 
        border: 1px solid rgba(255, 255, 255, 0.08); 
        transition: 0.3s; 
        display: flex; 
        align-items: center; 
        gap: 8px; 
    }

    .nav-links a.highlight { background: #8a4fff !important; color: white !important; }
    .nav-links a.btn-tuto { border: 1px solid #8a4fff !important; color: #8a4fff !important; }

    /* --- BOUTON BURGER --- */
    .burger-menu {
        display: none; /* Caché sur PC */
        flex-direction: column;
        gap: 6px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 5px;
        z-index: 10001;
    }

    .burger-menu span {
        display: block;
        width: 30px;
        height: 3px;
        background: white;
        border-radius: 3px;
        transition: 0.3s;
    }

    /* Animation du Burger en "X" */
    .burger-menu.active span:nth-child(1) { transform: translateY(9px) rotate(45deg); }
    .burger-menu.active span:nth-child(2) { opacity: 0; }
    .burger-menu.active span:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }

    /* --- RESPONSIVE MOBILE --- */
    @media (max-width: 900px) {
        .burger-menu { display: flex; }

        .nav-links {
            position: fixed;
            top: 0;
            right: -100%; /* Caché à droite */
            width: 70%;
            height: 100vh;
            background: #0b0b1a;
            flex-direction: column;
            justify-content: center;
            gap: 20px;
            transition: 0.4s ease-in-out;
            box-shadow: -10px 0 30px rgba(0,0,0,0.5);
            padding: 40px;
        }

        .nav-links.active {
            right: 0; /* Apparaît */
        }

        .nav-links a {
            width: 100%;
            justify-content: center;
            font-size: 1.2rem;
            padding: 15px;
        }
    }
</style>