<header class="header-container">
    <nav class="navbar">
        <a href="/gameeasy-site/" class="logo">GAM<span>EASY</span></a>
        
        <ul class="nav-links">
            <li><a href="/gameeasy-site/">Accueil</a></li>
            <li><a href="/gameeasy-site/cracks" class="highlight"><i class="fas fa-rocket"></i> Cracks</a></li>
            <li><a href="/gameeasy-site/tuto" class="btn-tuto"><i class="fas fa-book"></i> Tuto</a></li>
            <li><a href="https://discord.gg/TON-LIEN"><i class="fab fa-discord"></i> Discord</a></li>
            <li><a href="/gameeasy-site/about">About</a></li>
        </ul>

        <div class="search-container">
            <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" id="mainSearch" placeholder="Rechercher un jeu..." autocomplete="off">
        </div>
    </nav>
</header>

<style>
    .header-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 9999;
        background: rgba(6, 6, 18, 0.7);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 10px 0;
    }
    
    .navbar { display: flex; align-items: center; justify-content: space-between; padding: 0 5%; max-width: 1400px; margin: 0 auto; }
    .logo { font-size: 24px; font-weight: 800; color: white; text-decoration: none; }
    .logo span { color: #8a4fff; }
    .nav-links { display: flex; list-style: none; gap: 15px; margin: 0; padding: 0; align-items: center; }
    
    .nav-links a { 
        text-decoration: none; 
        color: #efefef; 
        font-size: 14px; 
        font-weight: 600; 
        padding: 10px 15px; 
        border-radius: 8px; 
        background: rgba(255, 255, 255, 0.03); 
        border: 1px solid rgba(255, 255, 255, 0.08); 
        transition: 0.3s; 
        display: flex; 
        align-items: center; 
        gap: 8px; 
    }
    
    .nav-links a.highlight { background: #8a4fff !important; color: white !important; }
    .nav-links a.btn-tuto { border: 1px solid #8a4fff !important; color: #8a4fff !important; }
    .nav-links a:hover { transform: translateY(-2px); background: rgba(138, 79, 255, 0.2); }

    .search-container { 
        display: flex; 
        align-items: center; 
        background: rgba(255, 255, 255, 0.05); 
        border-radius: 20px; 
        border: 1px solid rgba(255, 255, 255, 0.1); 
        padding: 4px 15px; 
        width: 180px; 
        transition: 0.4s; 
    }
    .search-container:focus-within { width: 250px; border-color: #8a4fff; background: rgba(138, 79, 255, 0.1); }
    .search-icon { color: rgba(255, 255, 255, 0.4); margin-right: 8px; }
    .search-container input { background: transparent; border: none; color: white; padding: 8px 0; outline: none; width: 100%; font-size: 13px; }
</style>

<script>
    const setupHeaderSearch = () => {
        const searchInput = document.getElementById('mainSearch') as HTMLInputElement;
        
        if (searchInput) {
            searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const val = searchInput.value.trim();
                    // Redirige vers la page catalogue avec le param√®tre de recherche
                    window.location.href = `/gameeasy-site/cracks?search=${encodeURIComponent(val)}`;
                }
            });
        }
    };

    setupHeaderSearch();
    document.addEventListener('astro:after-swap', setupHeaderSearch);
</script>